
@{
    ViewData["Title"] = "AddTodo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add todo</h2>

<form action="/addTodo" method="post">
	<div class="form-group">
		<label class="col-lg-2 control-label">Todo:</label>
		<div class="col-lg-10"><input class="form-control" type="text" name="title" placeholder="todo" /></div>
	</div>
	<div class="col-lg-10">
		<div class="checkbox"><label><input type="checkbox" name="isUrgent" value="true" />Urgent</label></div>
	</div>
	<div class="form-group col-lg-10 col-lg-offset-2">
		<button class="btn btn-primary" type="submit">Add</button>
	</div>
</form>
