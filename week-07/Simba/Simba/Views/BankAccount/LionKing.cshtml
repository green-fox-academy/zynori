@model List<BankAccount>

<h2>LionKing</h2>

<form action="/AddMoney" method="post">
	<select name="id">
		@for (int i = 0; i < Model.Count; i++)
		{
			<option type="number" value="@i">@Model[i].Name</option>
		}
	</select>
	<button type="submit" value="submit">Submit</button>
</form>

<table>
	<thead>
		<tr><th colspan="4" style="text-align: center">Lion King Bank Accounts</th></tr>
		<tr>
			<th style="padding: 10px;">Id</th>
			<th style="padding: 10px;">Name</th>
			<th style="padding: 10px;">Balance</th>
			<th style="padding: 10px;">Animal type</th>
			<th style="padding: 10px;">Good / Bad</th>
		</tr>
	</thead>
	@for (int i = 0; i < Model.Count; i++)
	{
		<tr>
			<td style="padding: 10px">@i</td>
			<td style="padding: 10px">
				@if (!Model[i].isKing)
				{
					@Model[i].Name;
				}
				else
				{
					<span style="font-weight: bold; color: hotpink">@Model[i].Name</span>;
				}
			</td>
			<td style="padding: 10px">@string.Format("{0:N2}", @Model[i].Balance) @Model[i].Currency</td>
			<td style="padding: 10px">@Model[i].AnimalType</td>
			<td style="padding: 10px">@Model[i].isGood</td>
		</tr>
	}
</table>
